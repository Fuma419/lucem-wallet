{
  "manifest_version": 3,
  "name": "Lucem",
  "version": "3.1.3",
  "description": "Light powered cardano wallet",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "mainPopup.html",
    "default_icon": "hodlr-android-chrome-192x192.png"
  },
  "icons": {
    "128": "hodlr-android-chrome-192x192.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "Hodler_Green_Icon_round.png",
        "Hodler_Green_Icon_round.png",
        "injected.bundle.js",
        "internalPopup.html"
      ],
      "matches": ["http://*/*", "https://*/*", "<all_urls>"]
    }
  ],
  "permissions": ["activeTab", "tabs", "storage", "unlimitedStorage"]
}
